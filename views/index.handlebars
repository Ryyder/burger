<div class="row">
  <div class="col-12">
    <h1>Eat-Da-Burger</h1>
  </div>
</div>

<div class="row">
  <div class="col-12 col-md-6">
    <h2>Burgers that are not devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>


  <div class="col-12 col-md-6">
    <h2>Burgers that are devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <h2>Add a burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burger-name" name="name">
      </div>

      <button type="submit" id="submit">Add Burger</button>
    </form>
  </div>
</div>
